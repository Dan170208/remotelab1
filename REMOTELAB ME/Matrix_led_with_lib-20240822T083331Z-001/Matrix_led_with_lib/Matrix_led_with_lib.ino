void setup()                                              // code ghi trong đây sẽ chỉ chạy 1 lần, đây là điểm bắt đầu của code
{
  for (int x=0; x < numDevices; x++)                      // tạo vòng lặp for
  {
    lc.shutdown(x, false);                                //Bật tất cả các ma trận LED.
    lc.setIntensity(x, 0);                                //Đặt độ sáng của tất cả các ma trận LED về 0.
    lc.clearDisplay(x);                                   //Xóa toàn bộ nội dung trên tất cả các ma trận LED.
  }
  lc.setIntensity(2, 15);                                 //Đặt độ sáng của ma trận LED thứ 2 lên 15 (giá trị tối đa).
  lc.setIntensity(1, 15);                                 //Đặt độ sáng của ma trận LED thứ 3 lên 15 (giá trị tối đa)
}

void loop()
{ 
  scrollMessage(scrollText);                              // Gọi hàm scrollMessage để hiển thị chuỗi "REMOTE LAB" trên ma trận LED.
}

