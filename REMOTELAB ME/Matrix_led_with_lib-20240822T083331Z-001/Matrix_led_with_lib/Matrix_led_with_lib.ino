void scrollFont()                                   //Hàm này dùng để hiển thị tất cả các ký tự có trong mảng font chữ.
{
  for (int counter=0x20; counter<0x80; counter++)
  {
    loadBufferLong(counter);
    delay(500);
  }
}

void scrollMessage(prog_uchar * messageString)    //Hàm này nhận vào một chuỗi ký tự và hiển thị từng ký tự lên ma trận LED.
{
  int counter = 0;
  int myChar=0;
  do 
  {
    myChar =  pgm_read_byte_near(messageString + counter); 
    if (myChar != 0)
    {
      loadBufferLong(myChar);
    }
    counter++;
  } 
  while (myChar != 0);
}

void loadBufferLong(int ascii)                  // Hàm này lấy một mã ASCII của một ký tự, tìm kiếm thông tin về ký tự đó trong mảng font chữ và lưu trữ thông tin vào một mảng buffer.
{
  if (ascii >= 0x20 && ascii <=0x7f)
  {
    for (int a=0;a<7;a++)
    {
      unsigned long c = pgm_read_byte_near(font5x7 + ((ascii - 0x20) * 8) + a);
      unsigned long x = bufferLong [a*2];
      x = x | c;
      bufferLong [a*2] = x;
    }
    byte count = pgm_read_byte_near(font5x7 +((ascii - 0x20) * 8) + 7);
    for (byte x=0; x<count;x++)
    {
      rotateBufferLong();
      printBufferLong();
      delay(scrollDelay);
    }
  }
}

void rotateBufferLong()                        //Hàm này dịch chuyển các bit trong mảng buffer để tạo hiệu ứng cuộn.
{
  for (int a=0;a<7;a++)
  {
    unsigned long x = bufferLong [a*2];
    byte b = bitRead(x,31);
    x = x<<1;
    bufferLong [a*2] = x;
    x = bufferLong [a*2+1];
    x = x<<1;
    bitWrite(x,0,b);
    bufferLong [a*2+1] = x;
  }
}  

void printBufferLong()                       //Hàm này lấy dữ liệu từ mảng buffer và hiển thị lên ma trận LED.
{
  for (int a=0;a<7;a++)
  {
    unsigned long x = bufferLong [a*2+1];
    byte y = x;
    lc.setRow(3,a,y);
    x = bufferLong [a*2];
    y = (x>>24);
    lc.setRow(2,a,y);
    y = (x>>16);
    lc.setRow(1,a,y);
    y = (x>>8);
    lc.setRow(0,a,y);
  }
}
